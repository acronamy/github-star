{
  "name": "github-star-monorepo",
  "version": "1.0.0",
  "description": "Display the top three repositories for a given language in the past month",
  "scripts": {
    "test": "npm run dev-serve & npx jest && npm run lint-all",
    "dev-serve": "npm run serve --prefix ./packages/app",
    "lint-browser": "npx eslint -c ./.eslintrc.browser.json packages/component-*/**/*.js packages/app-state/**/*.js --fix",
    "lint-node": "npx eslint -c ./.eslintrc.node.json packages/app/**/*.js --fix",
    "lint-all": "npm run lint-browser && npm run lint-node",
    "ci": "lerna bootstrap",
    "install": "lerna bootstrap",
    "clean": "lerna clean"
  },
  "author": "Adam Crockett",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^22.7.0",
    "eslint-plugin-react": "^7.13.0",
    "jest": "^24.8.0",
    "lerna": "^2.5.1",
    "puppeteer": "^1.17.0"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=6.0.0"
  }
}
